<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="InfoAboutPatient.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#00F6F3" Padding="24" CornerRadius="0">
            <Label Text="Information about patient" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Entry x:Name="EKGdata"/>
        <Button Text="ADD EKG" Clicked="Button_EKG" />
        <Entry x:Name="EMGdata"/>
        <Button Text="ADD EMG" Clicked="Button_EMG" />
        <Entry x:Name="FQA"/>
        <Button Text="ADD Question" Clicked="Button_FQA" />
        <Button Text="Start/Stop take location" Clicked="Button_take_location" />
        <Label x:Name="locationLabel" />
    </StackLayout>

</ContentPage>
